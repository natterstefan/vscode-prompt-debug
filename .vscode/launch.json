{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "preLaunchTask": "build",
            "outFiles": [
                "${workspaceFolder}/out/src/**/*.js"
            ]
        },
        {
            "name": "Test",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/test/jest-test-runner"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "preLaunchTask": "build",
            "outFiles": [
                "out"
            ]
        }
    ]
}